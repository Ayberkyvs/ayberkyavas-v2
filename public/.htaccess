<IfModule mod_deflate.c>
    # Mangled header'lar için zorunlu sıkıştırma yapar.
    <IfModule mod_setenvif.c>
        <IfModule mod_headers.c>
            # Sıkıştırma için Accept-Encoding header'ını ayarlar.
            SetEnvIfNoCase ^(Accept-EncodXng|X-cept-Encoding|X{15}|~{15}|-{15})$ ^((gzip|deflate)\s*,?\s*)+|[X~-]{4,13}$ HAVE_Accept-Encoding
            RequestHeader append Accept-Encoding "gzip,deflate" env=HAVE_Accept-Encoding
        </IfModule>
    </IfModule>

    # Aşağıdaki MIME-tipleri ile etiketlenmiş tüm çıktıları sıkıştırır.
    <IfModule mod_filter.c>
        AddOutputFilterByType DEFLATE application/atom+xml \
          application/javascript \
          application/json \
          application/rss+xml \
          application/vnd.ms-fontobject \
          application/x-font-ttf \
          application/x-web-app-manifest+json \
          application/xhtml+xml \
          application/xml \
          font/opentype \
          image/svg+xml \
          image/x-icon \
          text/css \
          text/html \
          text/plain \
          text/x-component \
          text/xml
    </IfModule>
</IfModule>

# Varsayılan karakter setini UTF-8 olarak ayarlar.
AddDefaultCharset utf-8

# Belirli dosya uzantıları için UTF-8 karakter setini kullanır.
AddCharset utf-8 .atom .css .js .json .rss .vtt .xml

# RewriteEngine'ı aktifleştirir.
RewriteEngine On

# WebP görüntüler için HTTP_ACCEPT kontrolü yapar.
RewriteCond %{HTTP_ACCEPT} image/webp

# Eğer istenen WebP dosyası varsa, onu sunar.
RewriteCond %{DOCUMENT_ROOT}/$1.webp -f
RewriteRule (.+)\.(jpe?g|png)$ $1.webp [T=image/webp,E=accept:1]
